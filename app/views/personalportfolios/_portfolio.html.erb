<div class="col-md-4">
  <div class="card mb-4 box-shadow" data-id="<%= portfolio.id %>">
    <%= image_tag portfolio.thumb_image.url unless portfolio.thumb_image.nil? %>    
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio.title, personalportfolio_show_path(portfolio) %></span>
        <%= portfolio.subtitle %>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
          <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
        </div>
        <!-- <small class="text-muted">9 mins</small> -->
      </div>
    </div>
  </div>
</div>


